<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/color_template_divider_line" />
                    <!-- alttan gölge -->
                    <corners android:radius="@dimen/_5sdp" />
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item android:bottom="@dimen/_3sdp">
                <shape>
                    <padding android:bottom="@dimen/_5sdp" />
                    <gradient android:angle="270" android:endColor="@color/color_template_divider_line" android:startColor="@color/color_template_divider_line" />
                    <corners android:radius="@dimen/_5sdp" />
                    <padding android:bottom="@dimen/_10sdp" android:left="@dimen/_10sdp" android:right="@dimen/_5sdp" android:top="@dimen/_10sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/color_template_divider_line" />
                    <corners android:radius="@dimen/_5sdp" />

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="@dimen/_5sdp" />
                    <gradient android:angle="270" android:endColor="@color/color_template_divider_line" android:startColor="@color/color_template_divider_line" />
                    <corners android:radius="@dimen/_5sdp" />
                    <padding android:bottom="@dimen/_10sdp" android:left="@dimen/_10sdp" android:right="@dimen/_5sdp" android:top="@dimen/_10sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>